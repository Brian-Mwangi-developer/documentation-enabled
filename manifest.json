{
    "name": "Documentation Guide",
    "description": "AI Assistant for all Documentation - reduces the time to read docs",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "sidePanel",
        "activeTab",
        "tabs",
        "scripting",
        "identity",
        "identity.email",
        "storage"
    ],
    "oauth2": {
        "client_id": "1050490204833-mp43bs0i7iijsk0v6mvs6te0q0jpgesk.apps.googleusercontent.com",
        "scopes": [
            "profile",
            "email"
        ]
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Documentation Guide",
        "default_icon": {
            "16": "images/logo.png",
            "48": "images/logo.png",
            "128": "images/logo.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "config.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}